        }

        li {
            float: left;
            margin-left: 15px;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        .list-unstyled {
            background-color: #ffffff;
        }

        li a:hover {
            background-color: #ffff;
        }



        .about-section {
            display: flex;
            align-items: center;
            padding: 20px;
        }

