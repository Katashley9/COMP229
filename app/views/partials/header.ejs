            /* Change the color to your preference */
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
        }

        h4.project {
            text-align: center;
            color: #DBB3BD;
        }

        .resume-button:hover {
            background-color: #0056b3;
            /* Change the color on hover */
        }

        .required {
            color: red;
            /* Set the color to red */
            margin-left: 3px;
            /* Adjust the spacing from the label text */
        }

        .wrapper {
            max-width: 1000px;
            margin: 0 auto;
            padding: 100px;
            background-color: #ffffff6c;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            color: 	#000000;
            text-align: center;
        }

        /* Add your custom styles here */

        /* Navbar container */
        /* Add your custom styles here */

        /* Navbar container */
        nav {
            background-color: #ffedd9;
            /* Background color for the navbar */
            color: #fff;
            /* Text color */
            padding: 5px 10px;
            margin-left: 0;
            margin-right: 0;
            /* Padding at the top and bottom */

        }

        /* Navbar list */
        nav ul {
            list-style: none;
            padding: 0;
            text-align: center;
            /* Center the list items horizontally */
        }

        /* Navbar list items */
        nav li {
            display: inline;
            margin-right: 20px;
        }

        /* Navbar links */
        nav a {
            text-decoration: none;
            color: #776f6f;
            /* Link text color */
            font-weight: bold;
            font-size: 20px;
            transition: color 0.3s;
            /* Smooth color transition on hover */
        }

        /* Navbar link hover effect */
        nav a:hover {
            color: rgb(219, 149, 149);
            /* Change link text color on hover */
        }


        nav img {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 20%;
            height: 100%;

        }











        a:visited {

            text-decoration: none;

        }







        a:hover {

            text-decoration: none;

        }







        a:active {

            text-decoration: none;

        }




        html,

        body {

            height: 100%;

            margin: 0;

        }




        body {

            display: flex;

            flex-direction: column;

            background-color: #fffcfc;

        }




        main {

            flex: 1;
            font-size: 120%;
            line-height: 200%;
        }

        p {
            line-height: 200%;
        }

        .container-fluid img {
            border-radius: 50%;
            size: 300%;
        }





        footer {

            background-color: #ffedd9;

            color: #c2bebeee;

            padding: 40px;

        }



        /* Form styles */
        .contact-form {
            background-color: #fff;
            padding: 5px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-right: -80px;
            margin-left: -80px;
        }

        .contact-form h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        input[type="text"],
        input[type="tel"],
        input[type="email"],
        textarea {
            width: 90%;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        textarea {
            resize: vertical;
            /* Allow vertical resizing of textarea */
        }

        button[type="submit"] {
            background-color:  #FAEBD7;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #FFE4E1;
        }

        /* Responsive styles (adjust for smaller screens) */
        @media (max-width: 768px) {
            .contact-form {
                padding: 10px;
            }
        }

        * {
            box-sizing: border-box
        }

        .mySlides1,
        .mySlides2 {
            display: none
        }

        img {
            vertical-align: middle;
        }

        /* Slideshow container */
        .slideshow-container {
            max-width: 1000px;
            position: relative;
            margin: auto;
        }

        /* Next & previous buttons */
        .prev,
        .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 16px;
            margin-top: -22px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }

        /* Position the "next button" to the right */
        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }

        /* On hover, add a grey background color */
        .prev:hover,
        .next:hover {
            background-color: #f1f1f1;
            color: black;
        }
